<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="canaltp_user.confirmation.form.name">canaltp_user_confirmation_form</parameter>
        <parameter key="canaltp_user.confirmation.form.type">canaltp_user_confirmation</parameter>
        <parameter key="sam_user_registration.type.class">CanalTP\SamEcoreUserManagerBundle\Form\Type\RegistrationFormType</parameter>
        <parameter key="sam_user.registration.form.listener.class">CanalTP\SamEcoreUserManagerBundle\Form\EventListener\RegistrationSuscriber</parameter>
    </parameters>

    <services>
        <service id="sam_user.user_provider.email" class="CanalTP\SamEcoreUserManagerBundle\Security\EmailProvider" public="false">
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="sam_user_registration.form.type" class="%sam_user_registration.type.class%">
            <tag name="form.type" alias="sam_user_registration" />
            <argument>%fos_user.model.group.class%</argument>
            <argument type="service" id="sam_user.registration.form.listener" />
        </service>

        <service id="sam_user.registration.form.listener" class="%sam_user.registration.form.listener.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="fos_user.registration.form.type" class="CanalTP\SamEcoreUserManagerBundle\Form\Type\UserType">
            <tag name="form.type" alias="sam_user" />
            <argument>%fos_user.model.user.class%</argument>
            <argument>%sam_user.form.registration%</argument>
        </service>

        <service id="fos_user.profile.form.type" class="CanalTP\SamEcoreUserManagerBundle\Form\Type\UserType">
            <tag name="form.type" alias="sam_user_profile" />
            <argument>%fos_user.model.user.class%</argument>
            <argument>%sam_user.form.registration%</argument>
        </service>

        <service id="fos_user.registration.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%fos_user.registration.form.name%</argument>
            <argument>%fos_user.registration.form.type%</argument>
            <argument>null</argument>
            <argument type="collection">
                <argument key="validation_groups">AdminRegistration</argument>
            </argument>
        </service>

        <service id="canaltp_user.confirmation.form.type" class="CanalTP\SamEcoreUserManagerBundle\Form\Type\ConfirmationFormType">
            <tag name="form.type" alias="canaltp_user_confirmation" />
        </service>

        <service id="canaltp_user.confirmation.form" factory-method="createNamed" factory-service="form.factory" class="Symfony\Component\Form\Form">
            <argument>%canaltp_user.confirmation.form.name%</argument>
            <argument>%canaltp_user.confirmation.form.type%</argument>
            <argument>null</argument>
            <argument type="collection">
                <argument key="validation_groups">Confirmation</argument>
            </argument>
        </service>

        <service id="canaltp_user.confirmation.form.handler.default" class="CanalTP\SamEcoreUserManagerBundle\Form\Handler\ConfirmationFormHandler" scope="request">
            <argument type="service" id="canaltp_user.confirmation.form" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="fos_user.user_manager" class="CanalTP\SamEcoreUserManagerBundle\Doctrine\UserManager">
            <argument type="service" id="security.encoder_factory" />
            <argument type="service" id="fos_user.util.username_canonicalizer" />
            <argument type="service" id="fos_user.util.email_canonicalizer" />
            <argument type="service" id="fos_user.entity_manager" />
            <argument>%fos_user.model.user.class%</argument>
            <call method="setUsersLimit">
                <argument>%sam_user.list.users_by_page%</argument>
            </call>
        </service>

        <service id="canaltp.role.processor" class="CanalTP\SamEcoreUserManagerBundle\Processor\RoleProcessor">
            <argument type="service" id="security.context" />
            <argument type="service" id="fos_user.user_manager" />
        </service>

        <service id="canaltp.security.role_hierarchy" alias="security.role_hierarchy" />

        <service id="canaltp_user.registration.form.handler.default" class="CanalTP\SamEcoreUserManagerBundle\Form\Handler\RegistrationFormHandler" scope="request" public="false">
            <argument type="service" id="fos_user.registration.form" />
            <argument type="service" id="request" />
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="fos_user.mailer" />
            <argument type="service" id="fos_user.util.token_generator" />
            <argument type="service" id="fos_user.util.token_generator" />
        </service>
    </services>

</container>
