{% extends "::base.html.twig" %}

{% block root_breadcrumb %}{% endblock %}

{% block fos_user_content %}
    <div class="row login">
        <div class="large-6 large-centered columns">
            <div class="panel">
                <form action="{{ path('fos_user_registration_confirm', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
                    {{ form_widget(form) }}
                    <div>
                        <input class="button success" type="submit" value="{{ 'confirmation.confirm.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}