{% extends "CanalTPSamEcoreUserManagerBundle:User:common_breadcrumb.html.twig" %}

{% block left_menu -%}
    {% include 'CanalTPSamEcoreUserManagerBundle:User:common_menu.html.twig' %}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">
        <a href="{{ path('sam_user_edit', { 'id': entity.id }) }}">{{'ctp_user.user.edit._breadcrumb'|trans}}</a>
    </li>
{% endblock %}

{% block main_content -%}

    <h1>{{'ctp_user.user.edit._title'|trans}}</h1>
    <hr/>
    <form action="{{ path('sam_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ bootstrap_set_style('horizontal') }}
        {{ form_widget(edit_form) }}

        <hr/>
        <div class="row">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-success" type="submit">
                    <span class="glyphicon glyphicon-pencil"></span> {{'ctp_user.user.actions.edit.short'|trans}}
                </button>
            </div>
        </div>
    </form>

{% endblock %}


