{% extends "CanalTPSamEcoreUserManagerBundle:User:common_breadcrumb.html.twig" %}

{% block root_breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ app.session.get('home_url', path('root')) }}">{{'ctp_core._breadcrumb'|trans}}</a></li>
        <li class="active">{{'ctp_user.profil._breadcrumb'|trans}}</li>
    </ol>

{% endblock %}

{% block left_menu -%}
    <div id="validation-rules" class="panel-body">
        {{ 'confirm_password.validation_rules'|trans({}, 'FOSUserBundle')|nl2br }}
    </div>
{% endblock %}

{% block main_content -%}
    <h1>{{'ctp_user.profil.edit._title'|trans}}</h1>
    <hr/>
    {{ form_start(form, { action: path('sam_user_edit_profil'), attr: {'novalidate': 'novalidate', class: 'fos_user_registration_register custom' } }) }}
        {{ bootstrap_set_style('horizontal') }}

        {{ form_row(form.lastname) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.timezone) }}
        {{ form_row(form.language) }}
	{{ form_row(form.plainPassword) }}

        <button class="btn btn-success" type="submit">
            <span class="glyphicon glyphicon-floppy-disk"></span> {{'ctp_user.profil.edit.actions'|trans}}
        </button>

        {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}
